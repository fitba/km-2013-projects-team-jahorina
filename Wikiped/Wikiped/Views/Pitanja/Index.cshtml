@model IEnumerable<Wikiped.DBBL.DAL.Pitanja>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Pocetna.cshtml";
}
<script src="/Script/pitanja.js" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div class="wrapperleft">
        <div id="searchPitanja">
            <div class="form-row" style="margin-bottom: 35px;">
                <label style="margin-right: 24px;">
                    Pretraga</label>
                <input type="text" class="title" name="search" style="width: 545px;" />
                <input type="submit" name="btnSearch" value="Pretraga" id="Pretraga" style="width: 82px;" />
            </div>
        </div>
        @if (@ViewBag.Search == false)
        {
            foreach (var item in ViewBag.AllPitanja)
            {
            <div class="question-summary narrow">
                <div class="leftBox">
                    <div class="votes">
                        <div class="mini-counts">@item.BrojGlasova</div>
                        <div>
                            glas</div>
                    </div>
                    <div class="status unanswered">
                        <div class="mini-counts">
                            0</div>
                        <div>
                            odgovor</div>
                    </div>
                    <div class="views">
                        <div class="mini-counts">@item.BrojPregleda</div>
                        <div>
                            pregled</div>
                    </div>
                </div>
                <div class="summary">
                    <h3>
                        <a class="colorBlue" href="/pitanja/details/@item.PitanjeID">@item.Naziv</a></h3>
                    <div class="tags t-html t-css t-google-chrome t-heroku t-zurb-foundation">
                        @foreach (var tag in @ViewBag.GetTags(@item.PitanjeID))
                        {
                            <a href="#" class="post-tag" title="" rel="tag">@tag</a> 
                        }
                    </div>
                    <div class="started">
                        <a href="/questions/14567110/website-content-shown-on-moz-but-not-chrome-with-heroku"
                            class="started-link"><span title="2013-01-28 16:57:21Z" class="relativetime">1m ago</span></a>
                        <a href="/users/1509401/jason328">jason328</a> <span class="reputation-score" title="reputation score"
                            dir="ltr">634</span>
                    </div>
                </div>
            </div>
            }
        }
        else
        {
            if (ViewBag.AllPitanja.Count == 0)
            {
              <div class="question-summary narrow">
                <div class="summary">
                    <h3>
                        <a class="colorBlue" href="" style="text-decoration:none!important;">Nema rezultata za datu pretragu...</a></h3>
                </div>
            </div>
            }
            foreach (var item in ViewBag.AllPitanja)
            {
            <div class="question-summary narrow">
                <div class="summary">
                    <h3>
                        <a class="colorBlue" href="/pitanja/details/@item.Id">@item.Name</a></h3>
                    <div class="tags t-html t-css t-google-chrome t-heroku t-zurb-foundation">
                        @foreach (var tag in @ViewBag.GetTags(@item.Id))
                        {
                            <a href="#" class="post-tag" title="" rel="tag">@tag</a> 
                        }
                    </div>
                    <div class="started">
                        <a href="/questions/14567110/website-content-shown-on-moz-but-not-chrome-with-heroku"
                            class="started-link"><span title="2013-01-28 16:57:21Z" class="relativetime">1m ago</span></a>
                        <a href="/users/1509401/jason328">jason328</a> <span class="reputation-score" title="reputation score"
                            dir="ltr">634</span>
                    </div>
                </div>
            </div>
            }
        }
    </div>
    <div class="sidebar-right">
        <div id="recent-tags-list">
            <a href="/questions/tagged/c%23" class="post-tag" title="" rel="tag">c#</a>&nbsp;<span
                class="item-multiplier"><span class="item-multiplier-x">×</span>&nbsp;<span class="item-multiplier-count">78</span></span><br>
            <a href="/questions/tagged/java" class="post-tag" title="" rel="tag">java</a>&nbsp;<span
                class="item-multiplier"><span class="item-multiplier-x">×</span>&nbsp;<span class="item-multiplier-count">70</span></span><br>
            <a href="/questions/tagged/android" class="post-tag" title="" rel="tag">
                <img src="http://i.stack.imgur.com/tKsDb.png" height="16" width="18" alt="" class="sponsor-tag-img">android</a>&nbsp;<span
                    class="item-multiplier"><span class="item-multiplier-x">×</span>&nbsp;<span class="item-multiplier-count">65</span></span><br>
            <a href="/questions/tagged/javascript" class="post-tag" title="" rel="tag">javascript</a>&nbsp;<span
                class="item-multiplier"><span class="item-multiplier-x">×</span>&nbsp;<span class="item-multiplier-count">44</span></span><br>
            <a href="/questions/tagged/php" class="post-tag" title="" rel="tag">php</a>&nbsp;<span
                class="item-multiplier"><span class="item-multiplier-x">×</span>&nbsp;<span class="item-multiplier-count">38</span></span><br>
